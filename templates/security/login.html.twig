{% extends 'base.html.twig' %}

{% block title %}Luigi's Pizza | Connexion{% endblock %}

{% block body %}
    <div id="title-container" class="text-gold bg-dark h-16 w-full">
        <h1 class="font-title text-6xl text-center">Connexion</h1>
    </div>

    <form action="{{ path('app_security') }}" method="post">
        <div class="form-field-container">
            <label for="email" class="form-label">Adresse mail</label>
            <input type="email" id="email" class="form-input" name="_username">
        </div>
        <div class="form-field-container">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" id="password" class="form-input" name="_password">
        </div>
        <div class="form-field-container">
            <input type="submit" class="button" value="Connexion">
        </div>
    </form>
{% endblock %}
