            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {% include 'partials/_header.html.twig' %}
        {% endblock %}

        {% block body %}{% endblock %}

    {% block footer %}
        {% include 'partials/_footer.html.twig' %}
    {% endblock %}
    </body>
