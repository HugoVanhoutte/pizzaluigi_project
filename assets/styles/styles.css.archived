@import url('https://fonts.googleapis.com/css2?family=Quintessential&family=Rouge+Script&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');

:root {
    --gold: #C5AB6B;
    --dark: #1A1C20;
    --light: #FFFCF3;
}

body {
    background-color: var(--light);
}

h1 {
    font-family: 'Rouge Script', "Brush Script MT" ,cursive;
}

h2, h3 {
    font-family: 'Quintessential', Garamond, cursive;
}

p, a, li, button, .button {
    font-family: 'Raleway', sans-serif;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

